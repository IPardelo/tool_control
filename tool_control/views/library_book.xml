<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='library_book_action' model='ir.actions.act_window'>
        <field name="name">Herramientas</field>
        <field name="res_model">library.book</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="My Tool Control" id="library_base_menu" />
    <menuitem name="Herramientas" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>

    <!-- Form View -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Tools Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="make_available" string="Disponible" type="object"/>
                    <button name="make_notavailable"  string="Usandose" type="object"/>
                    <button name="make_lost"  string="Perdida" type="object"/>
                    <button name="make_broken"  string="Rota" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="brand_id"/>
                    </group>
                    <group>
                        <field name="category_id"/>
                        <field name="current_user"/>
                        <field name="date_updated"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Tools List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="date_updated"/>
                <field name="current_user"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Tools Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>