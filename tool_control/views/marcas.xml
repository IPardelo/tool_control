<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='library_book_brands' model='ir.actions.act_window'>
        <field name="name">Marcas de herramienta</field>
        <field name="res_model">library.book.brand</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Marcas" id="library_book_brand" parent="library_base_menu" action="library_book_brands"/>

    <!-- Form View -->
    <record id="brands_view_form" model="ir.ui.view">
        <field name="name">Brands form</field>
        <field name="model">library.book.brand</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="brands_view_tree" model="ir.ui.view">
        <field name="name">Brands List</field>
        <field name="model">library.book.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
